<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c002bff"
    android:gravity="center_horizontal"

    >


    <!--
    0.8 => cc => Pattern not visible
    0.7 => b2 => No
    0.6 => 99 => Barely
    0.5 => 7f
    0.4 => 66
    0.3 => 4c
    0.2 => 33
    0.1 => 19
-->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome"
        android:textSize="24sp"
        android:textColor="#e5ffffff"
        android:layout_marginTop="30dp"

        />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="40dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >


            <TextView
                android:id="@+id/create_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textColor="#002bff"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"

                />



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/create_text_view"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"



                >


                <EditText
                    android:id="@+id/sign_up_user_name_edit_text"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:hint="User name"
                    android:textColorHint="#758cfd"
                    android:layout_marginStart="15dp"
                    android:maxLines="1"
                    android:inputType="text|textAutoCorrect"



                    />



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sign_up_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/card_view_user_name"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"



                >


                <EditText
                    android:id="@+id/sign_up_email_edit_text"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:hint="Email"
                    android:textColorHint="#758cfd"
                    android:layout_marginStart="15dp"
                    android:maxLines="1"
                    android:inputType="textEmailAddress|textEmailSubject"


                    />



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/card_view_sign_up_email"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"



                >


                <EditText
                    android:id="@+id/sign_up_name_edit_text"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:hint="Name"
                    android:textColorHint="#758cfd"
                    android:layout_marginStart="15dp"
                    android:maxLines="1"
                    android:inputType="text|textAutoCorrect"


                    />



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sign_up_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/card_view_name"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"



                >


                <EditText
                    android:id="@+id/sign_up_pass_edit_text"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:hint="Password"
                    android:textColorHint="#758cfd"
                    android:layout_marginStart="15dp"
                    android:maxLines="1"
                    android:inputType="textPassword"


                    />



            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sign_up_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/card_view_sign_up_password"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"

                >


                <EditText
                    android:id="@+id/sign_up_confirm_pass_edit_text"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:hint="Confirm Password"
                    android:textColorHint="#758cfd"
                    android:layout_marginStart="15dp"
                    android:maxLines="1"
                    android:inputType="textPassword"


                    />



            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sign_up_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#0229ea"
                android:layout_below="@+id/card_view_sign_up_confirm_password"
                >


                <TextView
                    android:id="@+id/sign_up_register_text"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="Register"
                    android:textSize="16sp"
                    android:textColorHint="#969494"
                    android:gravity="center"

                    />


            </android.support.v7.widget.CardView>





        </RelativeLayout>



    </android.support.v7.widget.CardView>















</LinearLayout>