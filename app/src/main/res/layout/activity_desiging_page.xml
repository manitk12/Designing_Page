<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#019b79"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="owl city"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_margin="15dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shooting star Ep"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"


            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 3.25"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="22dp"


            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"

            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="80dp"
                android:layout_height="match_parent"
                android:background="#019b79"
                >


                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="90dp"
                    android:background="#056652"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:orientation="horizontal"
                        android:weightSum="8"
                        >

                        <View
                            android:layout_width="0dp"
                            android:layout_height="31dp"
                            android:layout_weight="2"
                            android:background="#01cead"

                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="31dp"
                            android:layout_weight="6"

                            />



                    </LinearLayout>


                </FrameLayout>


            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"


                >

                <android.support.v7.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="90dp"
                    app:cardBackgroundColor="#7f01cead"

                    >


                    <!--
        0.8 => cc => Pattern not visible
        0.7 => b2 => No
        0.6 => 99 => Barely
        0.5 => 7f
        0.4 => 66
        0.3 => 4c
        0.2 => 33
        0.1 => 19
    -->


                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:src="@drawable/avatar_student"

                        />

                </android.support.v7.widget.CardView>


            </FrameLayout>




        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@color/white"


            >


            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#66ff5301"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"

                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/xml_orange"
                    android:layout_gravity="center"

                    />


            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#66ff5301"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="65dp"
                android:layout_marginStart="20dp"

                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/xml_orange"
                    android:layout_gravity="center"

                    />


            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView

                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#66ff5301"
                app:cardCornerRadius="26dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"

                >

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:background="@drawable/xml_orange"

                    />

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#66ff5301"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="65dp"
                android:layout_marginStart="15dp"

                >


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/xml_orange"
                    android:layout_gravity="center"

                    />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#66ff5301"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="20dp"

                >


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/xml_orange"
                    android:layout_gravity="center"

                    />

            </android.support.v7.widget.CardView>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When the sun goes down,"
            android:gravity="center"
            android:textColor="#66056652"
            android:background="@color/white"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="and the lights burn out,"
            android:gravity="center"
            android:textColor="#056652"
            android:background="@color/white"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="then it's time for you to shine"
            android:gravity="center"
            android:textColor="#66056652"
            android:background="@color/white"
            android:paddingBottom="10dp"
            />



        <ImageView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:src="@drawable/student"
            android:layout_height="40dp"
            android:paddingTop="10dp"


            />


    </LinearLayout>

</ScrollView>

