<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66a6a6a6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride 360"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="28sp"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_View_number"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="20dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/number_one_line"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_toEndOf="@+id/card_View_number"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            />



        <android.support.v7.widget.CardView
            android:id="@+id/card_View_number_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="20dp"
            android:layout_toEndOf="@+id/number_one_line"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/number_second_line"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_toEndOf="@+id/card_View_number_2"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            />


        <android.support.v7.widget.CardView
            android:id="@+id/card_View_number_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="20dp"
            android:layout_toEndOf="@+id/number_second_line"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        >


        <ImageView
            android:id="@+id/email_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"


            />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/email_image"
            android:layout_marginStart="5dp"
            android:background="#00000000"



            />



        <ImageView
            android:id="@+id/pass_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_below="@+id/email_image"
            android:layout_marginTop="15dp"


            />

        <EditText

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/pass_image"
            android:layout_alignTop="@+id/pass_image"
            android:layout_alignBottom="@+id/pass_image"
            android:layout_marginStart="5dp"
            android:background="#00000000"



            />






    </RelativeLayout>



</LinearLayout>