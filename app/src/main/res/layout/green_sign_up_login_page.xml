<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#24313c">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        >

        <android.support.v7.widget.CardView
            android:layout_width="190dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#1ab188"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:layout_gravity="center"

                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="190dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/grey"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textColor="#cfcfcf"
                android:layout_gravity="center"


                />

        </android.support.v7.widget.CardView>



    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up for Free"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"



        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >





        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#24313c"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"

            >



            <android.support.v7.widget.CardView
                android:id="@+id/first_name_card_view"
                android:layout_width="160dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#24313c"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"

                >


                    <EditText
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:hint="First Name"
                        android:textColor="@color/white"
                        android:textColorHint="#979797"
                        android:layout_gravity="center"
                        android:background="#24313c"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="5dp"



                        />

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view_1"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/first_name_card_view"
                android:layout_alignBottom="@+id/first_name_card_view"
                android:layout_alignStart="@id/first_name_card_view"
                android:background="#8f8f8f"


                />


            <View
                android:id="@+id/view_2"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/first_name_card_view"
                android:layout_alignBottom="@+id/first_name_card_view"
                android:background="#8f8f8f"
                android:layout_alignEnd="@+id/first_name_card_view"

                />

            <View
                android:id="@+id/view_3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignStart="@+id/first_name_card_view"
                android:layout_alignEnd="@+id/first_name_card_view"
                android:background="#8f8f8f"




                />


            <View
                android:id="@+id/view_4"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignStart="@+id/view_1"
                android:layout_alignEnd="@+id/view_2"
                android:layout_alignBottom="@+id/first_name_card_view"
                android:background="#8f8f8f"




                />

        </RelativeLayout>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#24313c"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"

            >



            <android.support.v7.widget.CardView
                android:id="@+id/last_name_card_view"
                android:layout_width="160dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#24313c"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"

                >


                <EditText
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:hint="Last Name"
                    android:textColor="@color/white"
                    android:textColorHint="#979797"
                    android:layout_gravity="center"
                    android:background="#24313c"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="10dp"




                    />

            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view_11"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/last_name_card_view"
                android:layout_alignBottom="@+id/last_name_card_view"
                android:layout_alignStart="@id/last_name_card_view"
                android:background="#8f8f8f"


                />


            <View
                android:id="@+id/view_12"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/last_name_card_view"
                android:layout_alignBottom="@+id/last_name_card_view"
                android:background="#8f8f8f"
                android:layout_alignEnd="@+id/last_name_card_view"

                />

            <View
                android:id="@+id/view_13"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignStart="@+id/last_name_card_view"
                android:layout_alignEnd="@+id/last_name_card_view"
                android:background="#8f8f8f"




                />


            <View
                android:id="@+id/view_14"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignStart="@+id/last_name_card_view"
                android:layout_alignEnd="@+id/last_name_card_view"
                android:layout_alignBottom="@+id/last_name_card_view"
                android:background="#8f8f8f"




                />

        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/email_cardview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#24313c"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"

        >



        <android.support.v7.widget.CardView
            android:id="@+id/email_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#24313c"

            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            >

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Addresss"
                android:textColor="@color/white"
                android:textColorHint="#979797"
                android:background="#24313c"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"


                />

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/email_cardview_start_border"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/email_cardview"
            android:layout_alignBottom="@+id/email_cardview"


            android:background="#8f8f8f"

            />


        <View
            android:id="@+id/view_22"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_23"
            android:layout_alignEnd="@+id/email_cardview"
            android:layout_alignBottom="@+id/view_24"
            android:background="#8f8f8f"


            />

        <View
            android:id="@+id/view_23"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignStart="@+id/email_cardview_start_border"
            android:layout_alignEnd="@+id/view_22"
            android:background="#8f8f8f"




            />


        <View
            android:id="@+id/view_24"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignStart="@+id/email_cardview_start_border"
            android:layout_alignEnd="@+id/view_22"
            android:layout_below="@+id/email_cardview"
            android:background="#8f8f8f"




            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#24313c"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"

        >


        <android.support.v7.widget.CardView
            android:id="@+id/pass_name_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#24313c"
            app:cardMaxElevation="0dp"
            app:cardElevation="0dp"


            >

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColor="@color/white"
                android:textColorHint="#979797"
                android:layout_gravity="center"
                android:background="#24313c"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"



                />

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/view_31"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_33"
            android:layout_alignBottom="@+id/view_34"
            android:background="#8f8f8f"
            android:layout_marginEnd="2dp"

            />


        <View
            android:id="@+id/view_32"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_33"
            android:layout_alignEnd="@+id/pass_name_card_view"
            android:layout_alignBottom="@+id/view_34"
            android:background="#8f8f8f"


            />

        <View
            android:id="@+id/view_33"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignStart="@+id/view_31"
            android:layout_alignEnd="@+id/view_32"
            android:background="#8f8f8f"




            />


        <View
            android:id="@+id/view_34"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignStart="@+id/view_31"
            android:layout_alignEnd="@+id/view_32"
            android:layout_below="@+id/pass_name_card_view"
            android:background="#8f8f8f"




            />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="#1ab188"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="28dp"


        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="get a started"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"

            />

        </android.support.v7.widget.CardView>


</LinearLayout>