<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="40dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="#121212"
                android:drawableTop="@color/grey"
                />


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"

            android:layout_alignStart="@+id/textcolor"
            android:layout_alignEnd="@+id/textcolor"
            android:layout_alignTop="@+id/textcolor"
            android:id="@+id/top1"
            android:background="#121212"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignStart="@+id/textcolor"
            android:layout_alignEnd="@+id/textcolor"
            android:layout_alignBottom="@+id/textcolor"
            android:id="@+id/bottom1"
            android:background="#121212"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textcolor"
            android:layout_alignBottom="@+id/textcolor"
            android:layout_alignStart="@+id/textcolor"

            android:id="@+id/start1"
            android:background="#121212"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textcolor"
            android:layout_alignBottom="@+id/textcolor"
            android:layout_alignEnd="@+id/textcolor"
            android:id="@+id/end1"
            android:background="#121212"
            />

    </RelativeLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text"
                android:layout_alignBottom="@+id/text"
                android:layout_alignEnd="@+id/text"
                android:id="@+id/text_border_end"
                android:background="#121212"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text"
                android:layout_alignBottom="@+id/text"

                android:id="@+id/text_border_start"
                android:background="#121212"
                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>